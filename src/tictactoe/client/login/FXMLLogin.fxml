      </ImageView>
      <Pane layoutX="210.0" layoutY="86.0" prefHeight="328.0" prefWidth="281.0">
         <children>
            <Rectangle arcHeight="25.0" arcWidth="25.0" fill="WHITE" height="298.0" layoutX="15.0" layoutY="17.0" opacity="0.85" stroke="#d7d7d7" strokeType="OUTSIDE" strokeWidth="3.0" styleClass="formBackground" width="251.0" />
            <Label layoutX="118.0" layoutY="41.0" text="Login">
